<p id="notice"><%= notice %></p>

<h1>User Activities</h1>

<table>
  <thead>
    <tr>
      <th>Activity type</th>
      <th>Activity start time</th>
      <th>Activity end time</th>
      <th>Fundraised</th>
      <th>Distance</th>
      <th>Noofsteps</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_activities.each do |user_activity| %>
      <tr>
        <td><%= user_activity.activity_type %></td>
        <td><%= user_activity.activity_start_time %></td>
        <td><%= user_activity.activity_end_time %></td>
        <td><%= user_activity.fundraised %></td>
        <td><%= user_activity.distance %></td>
        <td><%= user_activity.noofsteps %></td>
        <td><%= link_to 'Show', user_activity %></td>
        <td><%= link_to 'Edit', edit_user_activity_path(user_activity) %></td>
        <td><%= link_to 'Destroy', user_activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

